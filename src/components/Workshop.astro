<style>
  .grid_1-1 {
    background-color: #ffe781;
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-top: 50%;
  }

  .flex {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr;
    justify-items: center;
    margin-bottom: 20rem;
    flex-direction: column;

    margin-top: 10%;
  }

  article {
    display: grid;
    grid-column-start: 2;
  }

  h1 {
    color: #196472;

    /* h1 */
    font-family: DansestudietDisplay1;
    font-size: 4rem;
    font-style: normal;
    font-weight: 700;
    line-height: 120%; /* 4.8rem */
    text-align: left;

    width: 29.1875rem;
  }

  .undertitle {
    color: #2a8495;

    /* text-body-small-itlc */
    font-family: Avenir Next;
    font-size: 1rem;
    font-style: italic;
    font-weight: 400;
    line-height: 2.5rem; /* 250% */
    text-align: start;
    margin-top: 0;
  }

  p {
    color: #196472;

    /* text-body */
    font-family: Avenir Next;
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 400;
    line-height: 2.5rem; /* 200% */
  }

  .cirkel {
    border-radius: 36.5rem;
    background: var(--round-illustration, #ffdd4d);
    width: 36.5rem;
    height: 36.4375rem;
    margin-top: 13.25rem;
  }

  .danser {
    position: absolute;
    margin-top: -9.8rem;
    right: 9rem;
    z-index: 2;
  }

  .ani-blob-small {
    position: absolute;
    display: flex;
    justify-content: center;
    z-index: 0;
    margin-left: -21%;
    margin-top: -7%;
  }
</style>
